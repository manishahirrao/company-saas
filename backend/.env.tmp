# ========================
# Razorpay
# ========================
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret

# ========================
# External Services
# ========================
OPENAI_API_KEY=your-openai-api-key
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ========================
# Feature Flags
# ========================
FEATURE_EMAIL_VERIFICATION=true
FEATURE_ACCOUNT_APPROVAL=false
FEATURE_RATE_LIMITING=true

# ========================
# API Settings
# ========================
API_VERSION=v1
API_DOCS_PATH=/api-docs

# ========================
# Security
# ========================
TRUST_PROXY=loopback
HELMET_ENABLED=true
CSP_ENABLED=true

# ========================
# Logging
# ========================
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_DIR=./logs

# ========================
# Analytics & Monitoring
# ========================
SENTRY_DSN=your-sentry-dsn
GOOGLE_ANALYTICS_ID=your-ga-id

# ========================
# Job Posting Settings
# ========================
JOB_POSTING_EXPIRY_DAYS=30
MAX_JOB_POSTINGS_FREE=3
MAX_JOB_POSTINGS_PREMIUM=50

# ========================
# Content Generation
# ========================
DEFAULT_AI_MODEL=gpt-4
MAX_CONTENT_LENGTH=2000

# ========================
# Social Media
# ========================
SOCIAL_MEDIA_POST_LIMIT_DAILY=10

# ========================
# HR Services
# ========================
DEFAULT_HR_SERVICE_FEE_PERCENTAGE=15

# ========================
# File Uploads
# ========================
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf
MAX_UPLOAD_SIZE_MB=10

# ========================
# Cache Settings
# ========================
CACHE_TTL=3600 # 1 hour

# ========================
# Notifications
# ========================
EMAIL_NOTIFICATIONS_ENABLED=true
PUSH_NOTIFICATIONS_ENABLED=true
IN_APP_NOTIFICATIONS_ENABLED=true

# ========================
# Database Pool
# ========================
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_IDLE_TIMEOUT_MS=30000
DB_CONNECTION_TIMEOUT_MS=2000

# ========================
# Background Jobs
# ========================
JOB_QUEUE_CONCURRENCY=5
JOB_RETRY_ATTEMPTS=3

# ========================
# API Documentation
# ========================
SWAGGER_ENABLED=true
SWAGGER_ROUTE=/docs

# ========================
# Error Handling
# ========================
SHOW_ERROR_DETAILS=false
LOG_STACK_TRACES=true

# ========================
# Maintenance Mode
# ========================
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=Service temporarily unavailable for maintenance
