{
  "name": "postpilot-ai-hub-backend",
  "version": "1.0.0",
  "description": "Backend for PostPilot AI Hub",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "rm -rf dist && tsc --build && node scripts/fix-imports.js",
    "dev": "NODE_OPTIONS='--import=tsx/esm --no-warnings' tsx watch src/server.ts",
    "start": "node dist/index.js",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "migrate:generate": "typeorm-ts-node-esm -d src/config/data-source.ts migration:generate",
    "migrate:run": "typeorm-ts-node-esm -d src/config/data-source.ts migration:run",
    "migrate:revert": "typeorm-ts-node-esm -d src/config/data-source.ts migration:revert"
  },
  "_moduleAliases": {
    "@app": "./dist",
    "@config": "./dist/config",
    "@api": "./dist/api",
    "@utils": "./dist/utils",
    "@middleware": "./dist/middleware",
    "@controllers": "./dist/controllers",
    "@database": "./dist/database"
  },
  "imports": {
    "#app/*": "./dist/*.js",
    "#config/*": "./dist/config/*.js",
    "#api/*": "./dist/api/*.js"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "bcryptjs": "^2.4.3",
    "celebrate": "^15.0.3",
    "compression": "^1.8.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^6.15.0",
    "helmet": "^7.2.0",
    "http-status-codes": "^2.2.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.1",
    "node-fetch": "^2.7.0",
    "nodemailer": "^6.10.1",
    "pg": "^8.16.3",
    "razorpay": "^2.8.6",
    "reflect-metadata": "^0.2.1",
    "typeorm": "^0.3.19",
    "uuid": "^9.0.1",
    "validator": "^13.15.15",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/express-rate-limit": "^6.0.2",
    "@types/express-serve-static-core": "^4.19.0",
    "@types/helmet": "^4.0.0",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.0.0",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.15.4",
    "@types/qs": "^6.9.16",
    "@types/uuid": "^9.0.8",
    "@types/validator": "^13.15.2",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "module-alias": "^2.2.3",
    "prettier": "^3.2.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
